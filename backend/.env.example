# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/compliance
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=compliance

# Redis
REDIS_URL=redis://localhost:6379/0

# GitHub App
GITHUB_APP_ID=your-app-id
GITHUB_PRIVATE_KEY_PATH=./github-app-key.pem
GITHUB_WEBHOOK_SECRET=your-webhook-secret

# Azure OpenAI (Primary)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_KEY=your-azure-openai-key
AZURE_OPENAI_DEPLOYMENT_EMBEDDING=text-embedding-3-small
AZURE_OPENAI_DEPLOYMENT_LLM=gpt-4o-mini
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# OpenAI (Fallback)
OPENAI_API_KEY=sk-...

# Azure Blob Storage
BLOB_ENABLED=true
BLOB_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...
BLOB_CONTAINER_NAME=compliance-data

# Azure Document Intelligence (Optional)
ENABLE_DOC_INTELLIGENCE=false
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
AZURE_DOCUMENT_INTELLIGENCE_KEY=your-key

# Feature Flags
EMBEDDINGS_PROVIDER=azure
LLM_PROVIDER=azure
ENABLE_GITHUB_CHECKS=false
ENABLE_DEMO_SEED=true

# Security
ADMIN_API_KEY=demo-admin-key-change-in-production

# Application
LOG_LEVEL=INFO
ENVIRONMENT=development

# Optional: Monitoring
SENTRY_DSN=
ENABLE_METRICS=false
